<html lang="en" xmlns="http://www.w3.org/1999/xhtml"><head>
	<title>ETFTrack - Exchange-Traded Funds (ETF) Tracking - Simple ETF Performance Metrics</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<link media="all" type="text/css" rel="stylesheet" href="/etf.css">
	<%= javascript_include_tag "jquery-1.4.1.min", "rails", "highcharts" %>
	<%= stylesheet_link_tag "application" %> <%= javascript_include_tag "application" %> 
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<div class="header-holder">
				<div class="container">
					&nbsp;					
				</div><!--container-->
				<h1 class="logo"><a href="#">ETFTrack</a></h1><!--logo-->
				<ul id="nav">
					<div class="search">
						<form id="search" action="/search/" method="post">
							<input type="text" name="searchcriteria" placeholder="Enter ticker or name to search">
							<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token.to_s %>">
							<button class="search-submit" type="submit"><span></span></button>
						</form>
					</div>
					<li><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					<li>
						<% if admin? %>
						  	<a href="/logout">Logout</a>
						<% else %>
						  	<a href="/login">Login</a>						  
						<% end %>
					</li>
				</ul><!--nav-->
			</div><!--header-holder-->
		</div><!--header-->
		<div class="subpage-main">
			<div class="holder">
				<%= yield %>
			</div><!--holder-->
		</div><!--subpage main-->
		<div id="footer">
			<div class="holder">
		</div><!--footer-->
	</div><!--wrapper-->

</body></html>